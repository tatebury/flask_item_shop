{% extends 'base.html.j2' %}
{% block title %}
    Login
{% endblock %}

{% block content %}
<body class="text-center">

    <div class="container">
        <form method="POST" class="form-signin" style="color:white">
            {{ form.hidden_tag() }}
            <img class="mb-4" style="max-height:200px;border-radius:50%;" src="https://res.cloudinary.com/dzxscynhz/image/upload/v1636486854/gun_shop_logo_jkf737.jpg" alt="">
            <h1 class="h3 mb-3 font-weight-normal">
                Please Login
            </h1>
            <br>
            {{ form.email.label() }}
            {{ form.email(class="form-control", placeholder="Email") }}

            {% for error in form.email.errors %}
                <small style="color:red;">{{ error }}</small><br>
            {% endfor %}

            {{ form.password.label() }}
            {{ form.password(class="form-control", placeholder="Password") }}

            <br>


            <div class="checkbox mb-3">
               <h6>Do not have an account?</h6>
               <a class="btn btn-sm btn-secondary" href="{{ url_for('auth.register') }}">Register</a>
            </div>

            {{ form.submit(class="btn btn-lg btn-block btn-primary") }}

        </form>
        
        <small style="color:red">{{error}}</small><br>
        
    </div>
</body>
{% endblock %}